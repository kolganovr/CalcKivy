<CustB@Button>:
    font_size: 32
    background_color: [1, 1, 1, 1]
    

<MainContainer>:
    id: calculator
    rows: 8
    spacing: 7
    padding: 7
    canvas.before:
        Color:
            rgba: [0.15, 0.15, 0.15, 1]
        Rectangle:
            size: self.size
            pos: self.pos


    entry_calc: entry

    BoxLayout:
        Label:
            id: entry
            text: ""
            font_size: '32sp'
            halign: "left"
            multiline: False
            color: 1,1,1,1

    BoxLayout:
        CustB:
            text: 'x^2'
            on_press: calculator.square(entry.text)
        CustB:
            text: 'x^y'
            on_press: calculator.power(entry.text)
        CustB:
            text: 'sin'
            on_press: calculator.sin(entry.text)
        CustB:
            text: 'cos'
            on_press: calculator.cos(entry.text)
        CustB:
            text: 'tan'
            on_press: calculator.tan(entry.text)
    BoxLayout:
        CustB:
            text: '√'
            on_press: calculator.square_root(entry.text)
        CustB:
            text: '10^x'
            on_press: calculator.ten_power(entry.text)
        CustB:
            text: 'log'
        CustB:
            text: 'EXP'
            on_press: entry.text = '2.7182818284'
        CustB:
            text: 'Mod'
            on_press: calculator.Mod(entry.text)
    BoxLayout:
        CustB:
            text: 'Up'
            on_press: calculator.Up(entry.text)
        CustB:
            text: 'CE'
            on_press: entry.text = ""
        CustB:
            text: 'C'
            on_press: entry.text = ""
        CustB:
            text: 'DEL'
            on_press: calculator.delete(entry.text)
        CustB:
            text: '÷'
            on_press: calculator.sub(entry.text)
    BoxLayout:
        CustB:
            text: 'π'
            on_press: entry.text = '3.1415926535897932384626433832795028841'
        CustB:
            text: '7'
            on_press: entry.text += self.text
        CustB:
            text: '8'
            on_press: entry.text += self.text
        CustB:
            text: '9'
            on_press: entry.text += self.text
        CustB:
            text: '*'
            on_press: entry.text += self.text
    BoxLayout:
        CustB:
            text: 'x!'
            on_press: calculator.fact(entry.text)
        CustB:
            text: '4'
            on_press: entry.text += self.text
        CustB:
            text: '5'
            on_press: entry.text += self.text
        CustB:
            text: '6'
            on_press: entry.text += self.text
        CustB:
            text: '-'
            on_press: entry.text += self.text
    BoxLayout:
        CustB:
            text: '±'
            on_press: calculator.upsidedown(entry.text)
        CustB:
            text: '1'
            on_press: entry.text += self.text
        CustB:
            text: '2'
            on_press: entry.text += self.text
        CustB:
            text: '3'
            on_press: entry.text += self.text
        CustB:
            text: '+'
            on_press: entry.text += self.text
    BoxLayout:
        CustB:
            text: '('
            on_press: entry.text += self.text
        CustB:
            text: ')'
            on_press: entry.text += self.text
        CustB:
            text: '0'
            on_press: entry.text += self.text
        CustB:
            text: '.'
            on_press: entry.text += self.text
        CustB:
            text: '='
            on_press: calculator.equal(entry.text)
